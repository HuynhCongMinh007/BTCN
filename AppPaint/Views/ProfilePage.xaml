<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AppPaint.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AppPaint.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Data.Models"
    Background="Transparent"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid Padding="24,0,24,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Profile List  -->
            <Border
                Grid.Column="0"
                Margin="0,0,24,0"
                Padding="20"
                VerticalAlignment="Stretch"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                <StackPanel Spacing="16">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                        Text="Profiles" />

                    <Button
                        HorizontalAlignment="Stretch"
                        Click="CreateProfile_Click"
                        CornerRadius="6"
                        Style="{StaticResource AppAccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon FontFamily="{StaticResource FluentIconsFontFamily}" Glyph="&#xE710;" />
                            <TextBlock FontWeight="SemiBold" Text="New Profile" />
                        </StackPanel>
                    </Button>

                    <ListView
                        Height="450"
                        ItemsSource="{x:Bind ViewModel.Profiles, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.SelectedProfile, Mode=TwoWay}"
                        SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Profile">
                                <StackPanel Padding="12,8" Spacing="6">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                            Text="{x:Bind Name}" />
                                        <Border
                                            Padding="6,2"
                                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                                            CornerRadius="4"
                                            Visibility="{x:Bind IsActive, Mode=OneWay}">
                                            <TextBlock
                                                FontSize="10"
                                                FontWeight="Bold"
                                                Foreground="White"
                                                Text="ACTIVE" />
                                        </Border>
                                    </StackPanel>
                                    <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                        <Run Text="{x:Bind DefaultCanvasWidth}" />
                                        <Run Text="×" />
                                        <Run Text="{x:Bind DefaultCanvasHeight}" />
                                        <Run Text=" • " />
                                        <Run Text="{x:Bind Theme}" />
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!--  Profile Details  -->
            <ScrollViewer Grid.Column="1">
                <StackPanel Spacing="20">
                    <!--  Profile Info Card  -->
                    <Border
                        Padding="24"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="12">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <StackPanel Spacing="20">
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="Profile Information" />

                            <TextBox
                                Header="Profile Name"
                                IsEnabled="{x:Bind ViewModel.HasSelectedProfile, Mode=OneWay}"
                                PlaceholderText="Enter profile name"
                                Text="{x:Bind ViewModel.SelectedProfile.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <ComboBox
                                HorizontalAlignment="Stretch"
                                Header="Theme"
                                IsEnabled="{x:Bind ViewModel.HasSelectedProfile, Mode=OneWay}"
                                PlaceholderText="Select theme"
                                SelectedItem="{x:Bind ViewModel.SelectedProfileTheme, Mode=TwoWay}">
                                <x:String>System</x:String>
                                <x:String>Light</x:String>
                                <x:String>Dark</x:String>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!--  Canvas Settings Card  -->
                    <Border
                        Padding="24"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="12">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <StackPanel Spacing="20">
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="Default Canvas Settings" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <NumberBox
                                    Grid.Column="0"
                                    Header="Canvas Width (px)"
                                    IsEnabled="{x:Bind ViewModel.HasSelectedProfile, Mode=OneWay}"
                                    Maximum="2000"
                                    Minimum="400"
                                    PlaceholderText="Width"
                                    SpinButtonPlacementMode="Inline"
                                    Value="{x:Bind ViewModel.SelectedProfile.DefaultCanvasWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <NumberBox
                                    Grid.Column="2"
                                    Header="Canvas Height (px)"
                                    IsEnabled="{x:Bind ViewModel.HasSelectedProfile, Mode=OneWay}"
                                    Maximum="1500"
                                    Minimum="300"
                                    PlaceholderText="Height"
                                    SpinButtonPlacementMode="Inline"
                                    Value="{x:Bind ViewModel.SelectedProfile.DefaultCanvasHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!--  Color Preferences Card  -->
                    <Border
                        Padding="24"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="12">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <StackPanel Spacing="20">
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="Default Colors" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Spacing="10">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="Stroke Color" />
                                    <ColorPicker
                                        ColorChanged="StrokeColor_Changed"
                                        ColorSpectrumShape="Ring"
                                        IsAlphaEnabled="False"
                                        IsColorSliderVisible="True"
                                        IsEnabled="{x:Bind ViewModel.HasSelectedProfile, Mode=OneWay}" />
                                </StackPanel>

                                <StackPanel Grid.Column="2" Spacing="10">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="Fill Color" />
                                    <ColorPicker
                                        ColorChanged="FillColor_Changed"
                                        ColorSpectrumShape="Ring"
                                        IsAlphaEnabled="False"
                                        IsColorSliderVisible="True"
                                        IsEnabled="{x:Bind ViewModel.HasSelectedProfile, Mode=OneWay}" />
                                </StackPanel>

                                <StackPanel Grid.Column="4" Spacing="10">
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="Background" />
                                    <ColorPicker
                                        ColorChanged="BackgroundColor_Changed"
                                        ColorSpectrumShape="Ring"
                                        IsAlphaEnabled="False"
                                        IsColorSliderVisible="True"
                                        IsEnabled="{x:Bind ViewModel.HasSelectedProfile, Mode=OneWay}" />
                                </StackPanel>
                            </Grid>

                            <NumberBox
                                Header="Default Stroke Thickness"
                                IsEnabled="{x:Bind ViewModel.HasSelectedProfile, Mode=OneWay}"
                                Maximum="20"
                                Minimum="1"
                                SpinButtonPlacementMode="Inline"
                                Value="{x:Bind ViewModel.SelectedProfile.DefaultStrokeThickness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Border>

                    <!--  Actions  -->
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button
                            Command="{x:Bind ViewModel.SaveProfileCommand}"
                            CornerRadius="6"
                            IsEnabled="{x:Bind ViewModel.HasSelectedProfile, Mode=OneWay}"
                            Style="{StaticResource AppAccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon FontFamily="{StaticResource FluentIconsFontFamily}" Glyph="&#xE74E;" />
                                <TextBlock FontWeight="SemiBold" Text="Save Changes" />
                            </StackPanel>
                        </Button>

                        <Button
                            Command="{x:Bind ViewModel.DeleteProfileCommand}"
                            CornerRadius="6"
                            IsEnabled="{x:Bind ViewModel.CanDeleteProfile, Mode=OneWay}">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon
                                    FontFamily="{StaticResource FluentIconsFontFamily}"
                                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                    Glyph="&#xE74D;" />
                                <TextBlock Text="Delete Profile" />
                            </StackPanel>
                        </Button>

                        <Button
                            Command="{x:Bind ViewModel.SetActiveProfileCommand}"
                            CornerRadius="6"
                            IsEnabled="{x:Bind ViewModel.CanSetActiveProfile, Mode=OneWay}">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon FontFamily="{StaticResource FluentIconsFontFamily}" Glyph="&#xE8FB;" />
                                <TextBlock Text="Set as Active" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </ScrollViewer>
</Page>
