<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AppPaint.Views.ManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppPaint.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <NavigationView x:Name="ManagementNav"
          PaneDisplayMode="Left"
     IsBackButtonVisible="Visible"
       IsSettingsVisible="False"
    BackRequested="ManagementNav_BackRequested"
            SelectionChanged="ManagementNav_SelectionChanged">
            
     <!-- Header -->
          <NavigationView.Header>
                <Grid Height="48" Padding="16,0">
               <TextBlock Text="Management" 
             Style="{StaticResource TitleTextBlockStyle}"
     VerticalAlignment="Center"/>
      </Grid>
            </NavigationView.Header>

       <!-- Menu Items -->
   <NavigationView.MenuItems>
       <!-- Profiles Tab -->
       <NavigationViewItem Icon="Contact" 
                  Content="Profiles" 
            Tag="Profiles"
      ToolTipService.ToolTip="Manage your profiles and settings">
         <NavigationViewItem.InfoBadge>
       <InfoBadge x:Name="ProfilesBadge" 
      Value="0" 
        Visibility="Collapsed"/>
           </NavigationViewItem.InfoBadge>
           </NavigationViewItem>

              <!-- Drawings Tab (Bảng vẽ) -->
                <NavigationViewItem Icon="Library" 
         Content="Drawings" 
        Tag="Drawings"
      ToolTipService.ToolTip="Manage saved drawings">
         <NavigationViewItem.InfoBadge>
           <InfoBadge x:Name="DrawingsBadge" 
      Value="0" 
             Visibility="Collapsed"/>
    </NavigationViewItem.InfoBadge>
    </NavigationViewItem>

       <!-- Templates Tab (Hình mẫu) -->
        <NavigationViewItem Icon="Favorite" 
         Content="Templates" 
            Tag="Templates"
        ToolTipService.ToolTip="Manage shape templates">
  <NavigationViewItem.InfoBadge>
       <InfoBadge x:Name="TemplatesBadge" 
         Value="0" 
         Visibility="Collapsed"/>
    </NavigationViewItem.InfoBadge>
           </NavigationViewItem>

      <NavigationViewItemSeparator/>

         <!-- Dashboard (Optional) -->
       <NavigationViewItem Icon="ViewAll" 
  Content="Dashboard" 
     Tag="Dashboard"
    ToolTipService.ToolTip="View statistics and analytics"/>
       </NavigationView.MenuItems>

       <!-- Content Frame -->
          <Frame x:Name="ContentFrame" 
                Margin="0,0,0,0"/>
        </NavigationView>
    </Grid>
</Page>
