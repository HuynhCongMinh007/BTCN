<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AppPaint.Views.ManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AppPaint.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <!--  NavigationView with sub-menu for Management  -->
        <NavigationView
            x:Name="ManagementNav"
            CompactPaneLength="48"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            OpenPaneLength="240"
            PaneDisplayMode="Left"
            SelectionChanged="ManagementNav_SelectionChanged">

            <!--  Header  -->
            <NavigationView.Header>
                <Grid Height="Auto" Padding="16,12">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource FluentIconsFontFamily}"
                                FontSize="28"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Glyph="&#xE8F1;" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Style="{StaticResource TitleTextBlockStyle}"
                                Text="Management" />
                        </StackPanel>
                        <TextBlock
                            Opacity="0.7"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="Manage profiles, drawings, templates, and view dashboard" />
                    </StackPanel>
                </Grid>
            </NavigationView.Header>

            <!--  Menu Items  -->
            <NavigationView.MenuItems>
                <!--  Dashboard  -->
                <NavigationViewItem
                    Content="Dashboard"
                    Tag="Dashboard"
                    ToolTipService.ToolTip="View statistics and charts">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource FluentIconsFontFamily}" Glyph="&#xE9D9;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItemSeparator />

                <!--  Profiles  -->
                <NavigationViewItem
                    Content="Profiles"
                    Icon="Contact"
                    Tag="Profiles"
                    ToolTipService.ToolTip="Manage your profiles and settings" />

                <!--  Drawings  -->
                <NavigationViewItem
                    Content="Drawings"
                    Icon="Library"
                    Tag="Drawings"
                    ToolTipService.ToolTip="Manage saved drawings" />

                <!--  Templates  -->
                <NavigationViewItem
                    Content="Templates"
                    Icon="Favorite"
                    Tag="Templates"
                    ToolTipService.ToolTip="Manage shape templates" />
            </NavigationView.MenuItems>

            <!--  Content Frame  -->
            <Frame x:Name="ContentFrame" Navigated="ContentFrame_Navigated" />
        </NavigationView>
    </Grid>
</Page>
