<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AppPaint.Views.ManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AppPaint.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <!--  NavigationView with sub-menu for Management  -->
        <NavigationView
            x:Name="ManagementNav"
            CompactPaneLength="48"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            OpenPaneLength="260"
            PaneDisplayMode="Left"
            SelectionChanged="ManagementNav_SelectionChanged">

            <!--  Header  -->
            <NavigationView.Header>
                <Border
                    Padding="24,16"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,0,0,1">

                    <Border.Shadow>
                        <ThemeShadow />
                    </Border.Shadow>

                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <Border
                                Width="48"
                                Height="48"
                                Background="{ThemeResource AccentFillColorSecondaryBrush}"
                                CornerRadius="8">
                                <FontIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource FluentIconsFontFamily}"
                                    FontSize="24"
                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                    Glyph="&#xE8F1;" />
                            </Border>
                            <StackPanel VerticalAlignment="Center" Spacing="4">
                                <TextBlock
                                    FontSize="24"
                                    FontWeight="Bold"
                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                    Text="Management" />
                                <TextBlock
                                    FontSize="13"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Manage profiles, drawings, templates, and view dashboard" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </NavigationView.Header>

            <!--  Menu Items  -->
            <NavigationView.MenuItems>
                <!--  Dashboard  -->
                <NavigationViewItem
                    Content="Dashboard"
                    Tag="Dashboard"
                    ToolTipService.ToolTip="View statistics and charts">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource FluentIconsFontFamily}" Glyph="&#xE9D9;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItemSeparator />

                <!--  Profiles  -->
                <NavigationViewItem
                    Content="Profiles"
                    Tag="Profiles"
                    ToolTipService.ToolTip="Manage your profiles and settings">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource FluentIconsFontFamily}" Glyph="&#xE77B;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <!--  Drawings  -->
                <NavigationViewItem
                    Content="Drawings"
                    Tag="Drawings"
                    ToolTipService.ToolTip="Manage saved drawings">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource FluentIconsFontFamily}" Glyph="&#xE8F1;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <!--  Templates  -->
                <NavigationViewItem
                    Content="Templates"
                    Tag="Templates"
                    ToolTipService.ToolTip="Manage shape templates">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource FluentIconsFontFamily}" Glyph="&#xE8B7;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <!--  Content Frame  -->
            <Frame x:Name="ContentFrame" Navigated="ContentFrame_Navigated" />
        </NavigationView>
    </Grid>
</Page>
