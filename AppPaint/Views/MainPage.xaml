<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AppPaint.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppPaint.Views"
    xmlns:vm="using:AppPaint.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <Page.Resources>
        <Storyboard x:Name="PageEntranceAnimation">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="HeaderPanel" Storyboard.TargetProperty="Opacity">
                <DiscreteDoubleKeyFrame KeyTime="0" Value="0"/>
                <SplineDoubleKeyFrame KeyTime="0:0:0.3" Value="1">
                    <SplineDoubleKeyFrame.KeySpline>
                        <KeySpline ControlPoint1="0.1,0.9" ControlPoint2="0.2,1"/>
                    </SplineDoubleKeyFrame.KeySpline>
                </SplineDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="QuickActionsGrid" Storyboard.TargetProperty="Opacity">
                <DiscreteDoubleKeyFrame KeyTime="0" Value="0"/>
                <SplineDoubleKeyFrame KeyTime="0:0:0.5" Value="1">
                    <SplineDoubleKeyFrame.KeySpline>
                        <KeySpline ControlPoint1="0.1,0.9" ControlPoint2="0.2,1"/>
                    </SplineDoubleKeyFrame.KeySpline>
                </SplineDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Theme Shadow Resource -->
        <ThemeShadow x:Name="SharedShadow" />
    </Page.Resources>

    <ScrollViewer>
        <Grid Padding="24" MaxWidth="1400">
          <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
 <RowDefinition Height="Auto"/>
    <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

 <!-- Header with Animation -->
    <StackPanel x:Name="HeaderPanel" Grid.Row="0" Spacing="8" Margin="0,0,0,32" Opacity="0">
                <TextBlock Text="{x:Bind ViewModel.WelcomeMessage, Mode=OneWay}"
                           Style="{StaticResource TitleLargeTextBlockStyle}"
                           FontWeight="Bold"/>
                <TextBlock Text="Create, manage, and organize your drawings with professional tools"
                           Style="{StaticResource BodyTextBlockStyle}"
                           Opacity="0.7"/>
            </StackPanel>

            <!-- Quick Actions with Cards -->
            <Grid x:Name="QuickActionsGrid" Grid.Row="1" Margin="0,0,0,32" Opacity="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Start Drawing Card -->
                <Border Grid.Column="0"
                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                        CornerRadius="8"
                        Margin="0,0,8,0"
                        Height="180"
                        Translation="0,0,8">
                    <Border.Shadow>
                        <ThemeShadow />
                    </Border.Shadow>
                    <Button Command="{x:Bind ViewModel.NavigateToDrawingCommand}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0">
                        <Grid Padding="24">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <FontIcon Grid.Row="0"
                                      FontFamily="{StaticResource SymbolThemeFontFamily}"
                                      Glyph="&#xE70F;"
                                      FontSize="40"
                                      Foreground="White"
                                      HorizontalAlignment="Left"/>

                            <StackPanel Grid.Row="2" Spacing="4">
                                <TextBlock Text="Start Drawing"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="Create a new canvas"
                                           FontSize="13"
                                           Foreground="White"
                                           Opacity="0.9"/>
                            </StackPanel>
                        </Grid>
                    </Button>
                </Border>

                <!-- Templates Card -->
                <Border Grid.Column="1"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="4,0,4,0"
                        Height="180"
                        Translation="0,0,8">
                    <Border.Shadow>
                        <ThemeShadow />
                    </Border.Shadow>
                    <Button Command="{x:Bind ViewModel.NavigateToTemplatesCommand}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0">
                        <Grid Padding="24">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <FontIcon Grid.Row="0"
                                      FontFamily="{StaticResource SymbolThemeFontFamily}"
                                      Glyph="&#xE8B7;"
                                      FontSize="40"
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                      HorizontalAlignment="Left"/>

                            <StackPanel Grid.Row="2" Spacing="4">
                                <TextBlock Text="Templates"
                                           FontSize="20"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Browse saved templates"
                                           FontSize="13"
                                           Opacity="0.7"/>
                            </StackPanel>
                        </Grid>
                    </Button>
                </Border>

                <!-- Profile Card -->
                <Border Grid.Column="2"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="8,0,0,0"
                        Height="180"
                        Translation="0,0,8">
                    <Border.Shadow>
                        <ThemeShadow />
                    </Border.Shadow>
                    <Button Command="{x:Bind ViewModel.NavigateToProfileCommand}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0">
                        <Grid Padding="24">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <FontIcon Grid.Row="0"
                                      FontFamily="{StaticResource SymbolThemeFontFamily}"
                                      Glyph="&#xE77B;"
                                      FontSize="40"
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                      HorizontalAlignment="Left"/>

                            <StackPanel Grid.Row="2" Spacing="4">
                                <TextBlock Text="Profile"
                                           FontSize="20"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Manage preferences"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           FontSize="13"
                                           Opacity="0.7"/>
                            </StackPanel>
                        </Grid>
                    </Button>
                </Border>
            </Grid>

            <!-- Dashboard Stats Area -->
            <Grid Grid.Row="2">
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24"
                        Translation="0,0,8">
                    <Border.Shadow>
                        <ThemeShadow />
                    </Border.Shadow>
                    <StackPanel Spacing="20">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                      Glyph="&#xE9D9;"
                                      FontSize="28"
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Quick Stats"
                                       FontSize="24"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Stat Card 1 -->
                            <Border Grid.Column="0"
                                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                                    CornerRadius="4"
                                    Padding="16"
                                    Margin="0,0,8,0">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="📊" FontSize="32"/>
                                    <TextBlock Text="Total Templates"
                                               Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock Text="--"
                                               FontSize="28"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <!-- Stat Card 2 -->
                            <Border Grid.Column="1"
                                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                                    CornerRadius="4"
                                    Padding="16"
                                    Margin="4,0">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="✏️" FontSize="32"/>
                                    <TextBlock Text="Total Shapes"
                                               Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock Text="--"
                                               FontSize="28"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <!-- Stat Card 3 -->
                            <Border Grid.Column="2"
                                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                                    CornerRadius="4"
                                    Padding="16"
                                    Margin="8,0,0,0">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="👤" FontSize="32"/>
                                    <TextBlock Text="Active Profile"
                                               Style="{StaticResource CaptionTextBlockStyle}"/>
                                    <TextBlock Text="Default"
                                               FontSize="28"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                CornerRadius="4"
                                Padding="20"
                                Margin="0,12,0,0">
                            <StackPanel Spacing="12">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <TextBlock Text="🎨" FontSize="24"/>
                                    <TextBlock Text="Getting Started"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock TextWrapping="Wrap"
                                           Opacity="0.8">
                                    <Run Text="Welcome to AppPaint! Start by creating a new canvas or browse your saved templates."/>
                                    <LineBreak/><LineBreak/>
                                    <Run Text="Features:" FontWeight="SemiBold"/>
                                    <LineBreak/>
                                    <Run Text="• Draw shapes: Line, Rectangle, Circle, Triangle, Polygon"/>
                                    <LineBreak/>
                                    <Run Text="• Save and load templates"/>
                                    <LineBreak/>
                                    <Run Text="• Customize colors and styles"/>
                                    <LineBreak/>
                                    <Run Text="• Manage multiple profiles"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
