<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AppPaint.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AppPaint.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,24"
                Spacing="8">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon
                        FontFamily="{StaticResource FluentIconsFontFamily}"
                        FontSize="28"
                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                        Glyph="&#xE9D9;" />
                    <TextBlock
                        FontWeight="Bold"
                        Style="{StaticResource TitleLargeTextBlockStyle}"
                        Text="Dashboard" />
                </StackPanel>
                <TextBlock Opacity="0.7" Text="Overview of your drawings and usage statistics" />
            </StackPanel>

            <!--  Statistics Cards  -->
            <Grid Grid.Row="1" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Total Drawings Card  -->
                <Border
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    Padding="20"
                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                    CornerRadius="8">
                    <StackPanel Spacing="8">
                        <FontIcon
                            FontFamily="{StaticResource FluentIconsFontFamily}"
                            FontSize="32"
                            Foreground="White"
                            Glyph="&#xE8F1;" />
                        <TextBlock
                            FontSize="32"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{x:Bind ViewModel.TotalDrawings, Mode=OneWay}" />
                        <TextBlock
                            FontSize="14"
                            Foreground="White"
                            Opacity="0.9"
                            Text="Total Drawings" />
                    </StackPanel>
                </Border>

                <!--  Total Shapes Card  -->
                <Border
                    Grid.Column="1"
                    Margin="4,0"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel Spacing="8">
                        <FontIcon
                            FontFamily="{StaticResource FluentIconsFontFamily}"
                            FontSize="32"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            Glyph="&#xE91B;" />
                        <TextBlock
                            FontSize="32"
                            FontWeight="Bold"
                            Text="{x:Bind ViewModel.TotalShapes, Mode=OneWay}" />
                        <TextBlock
                            FontSize="14"
                            Opacity="0.7"
                            Text="Total Shapes" />
                    </StackPanel>
                </Border>

                <!--  Total Profiles Card  -->
                <Border
                    Grid.Column="2"
                    Margin="4,0"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel Spacing="8">
                        <FontIcon
                            FontFamily="{StaticResource FluentIconsFontFamily}"
                            FontSize="32"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            Glyph="&#xE77B;" />
                        <TextBlock
                            FontSize="32"
                            FontWeight="Bold"
                            Text="{x:Bind ViewModel.TotalProfiles, Mode=OneWay}" />
                        <TextBlock
                            FontSize="14"
                            Opacity="0.7"
                            Text="Profiles" />
                    </StackPanel>
                </Border>

                <!--  Average Shapes Per Drawing Card  -->
                <Border
                    Grid.Column="3"
                    Margin="8,0,0,0"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel Spacing="8">
                        <FontIcon
                            FontFamily="{StaticResource FluentIconsFontFamily}"
                            FontSize="32"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            Glyph="&#xE9D9;" />
                        <TextBlock
                            FontSize="32"
                            FontWeight="Bold"
                            Text="{x:Bind ViewModel.AverageShapesPerDrawing, Mode=OneWay}" />
                        <TextBlock
                            FontSize="14"
                            Opacity="0.7"
                            Text="Avg Shapes/Drawing" />
                    </StackPanel>
                </Border>
            </Grid>

            <!--  Charts and Details  -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Shape Type Distribution  -->
                <Border
                    Grid.Row="0"
                    Margin="0,0,0,16"
                    Padding="24"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon
                                FontFamily="{StaticResource FluentIconsFontFamily}"
                                FontSize="20"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Glyph="&#xE9D2;" />
                            <TextBlock
                                FontSize="20"
                                FontWeight="SemiBold"
                                Text="Shape Type Distribution" />
                        </StackPanel>

                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.ShapeTypeStats, Mode=OneWay}">
                            <ItemsRepeater.Layout>
                                <StackLayout Spacing="12" />
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="80" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Shape Type Name  -->
                                        <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Text="{Binding ShapeTypeName}" />

                                        <!--  Progress Bar  -->
                                        <ProgressBar
                                            Grid.Column="1"
                                            Height="20"
                                            Margin="12,0"
                                            VerticalAlignment="Center"
                                            CornerRadius="4"
                                            Maximum="100"
                                            Value="{Binding Percentage}" />

                                        <!--  Count and Percentage  -->
                                        <StackPanel
                                            Grid.Column="2"
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal"
                                            Spacing="8">
                                            <TextBlock FontWeight="Bold" Text="{Binding Count}" />
                                            <TextBlock Opacity="0.7">
                                                <Run Text="(" />
                                                <Run Text="{Binding Percentage}" />
                                                <Run Text="%)" />
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </StackPanel>
                </Border>

                <!--  Recent Activity  -->
                <Border
                    Grid.Row="1"
                    Padding="24"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon
                                FontFamily="{StaticResource FluentIconsFontFamily}"
                                FontSize="20"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Glyph="&#xE81C;" />
                            <TextBlock
                                FontSize="20"
                                FontWeight="SemiBold"
                                Text="Recent Drawings" />
                        </StackPanel>

                        <ListView
                            MaxHeight="300"
                            ItemsSource="{x:Bind ViewModel.RecentDrawings, Mode=OneWay}"
                            SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Icon with Windows 11 Fluent Icons  -->
                                        <FontIcon
                                            Grid.Column="0"
                                            Margin="0,0,16,0"
                                            FontFamily="{StaticResource FluentIconsFontFamily}"
                                            FontSize="24"
                                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                            Glyph="&#xE8F1;" />

                                        <!--  Info  -->
                                        <StackPanel Grid.Column="1" Spacing="4">
                                            <TextBlock FontWeight="SemiBold" Text="{Binding Name}" />
                                            <TextBlock Opacity="0.7">
                                                <Run Text="{Binding Shapes.Count}" />
                                                <Run Text="shapes • " />
                                                <Run Text="{Binding Width}" />
                                                <Run Text="×" />
                                                <Run Text="{Binding Height}" />
                                            </TextBlock>
                                        </StackPanel>

                                        <!--  Date  -->
                                        <TextBlock
                                            Grid.Column="2"
                                            VerticalAlignment="Center"
                                            Opacity="0.7"
                                            Text="{Binding CreatedAt}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
