<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Windows 11 Fluent Icons Font Family -->
    <FontFamily x:Key="FluentIconsFontFamily">Segoe Fluent Icons, Segoe MDL2 Assets</FontFamily>

<!-- App Color Palette -->
    <Color x:Key="AppPrimaryColor">#0078D4</Color>
    <Color x:Key="AppSecondaryColor">#005A9E</Color>
    <Color x:Key="AppAccentColor">#0063B1</Color>
    <Color x:Key="AppSuccessColor">#107C10</Color>
  <Color x:Key="AppWarningColor">#FFC83D</Color>
  <Color x:Key="AppErrorColor">#E81123</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="AppPrimaryBrush" Color="{StaticResource AppPrimaryColor}"/>
    <SolidColorBrush x:Key="AppSecondaryBrush" Color="{StaticResource AppSecondaryColor}"/>
    <SolidColorBrush x:Key="AppAccentBrush" Color="{StaticResource AppAccentColor}"/>
    <SolidColorBrush x:Key="AppSuccessBrush" Color="{StaticResource AppSuccessColor}"/>
  <SolidColorBrush x:Key="AppWarningBrush" Color="{StaticResource AppWarningColor}"/>
    <SolidColorBrush x:Key="AppErrorBrush" Color="{StaticResource AppErrorColor}"/>

    <!-- Spacing -->
 <x:Double x:Key="SpacingXSmall">4</x:Double>
    <x:Double x:Key="SpacingSmall">8</x:Double>
    <x:Double x:Key="SpacingMedium">16</x:Double>
    <x:Double x:Key="SpacingLarge">24</x:Double>
    <x:Double x:Key="SpacingXLarge">32</x:Double>

    <!-- Corner Radius (Windows 11 style - slightly more rounded) -->
    <CornerRadius x:Key="ControlCornerRadius">4</CornerRadius>
<CornerRadius x:Key="CardCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="OverlayCornerRadius">8</CornerRadius>

    <!-- Shadow -->
    <ThemeShadow x:Key="AppThemeShadow"/>

    <!-- Card Style with Windows 11 Fluent Design -->
    <Style x:Key="AppCardStyle" TargetType="Border">
 <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
     <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
     <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
  <Setter Property="Padding" Value="{StaticResource SpacingLarge}"/>
    </Style>

    <!-- Accent Card Style -->
    <Style x:Key="AppAccentCardStyle" TargetType="Border">
     <Setter Property="Background" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
  <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
 <Setter Property="Padding" Value="{StaticResource SpacingLarge}"/>
    </Style>

 <!-- Section Title Style -->
    <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
    <Setter Property="FontSize" Value="24"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

 <!-- Section Subtitle Style -->
    <Style x:Key="SectionSubtitleStyle" TargetType="TextBlock">
<Setter Property="FontSize" Value="18"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
<Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

<!-- Page Header Style -->
    <Style x:Key="PageHeaderStyle" TargetType="StackPanel">
   <Setter Property="Spacing" Value="8"/>
<Setter Property="Margin" Value="0,0,0,24"/>
    </Style>

    <!-- Toolbar Style -->
    <Style x:Key="ToolbarStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
      <Setter Property="Spacing" Value="8"/>
     <Setter Property="Padding" Value="12"/>
<Setter Property="Background" Value="{ThemeResource LayerFillColorDefaultBrush}"/>
    </Style>

    <!-- Icon Button Style (Windows 11 Fluent) -->
    <Style x:Key="IconButtonStyle" TargetType="Button">
  <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="CornerRadius" Value="4"/>
     <Setter Property="Padding" Value="0"/>
  <Setter Property="Background" Value="{ThemeResource SubtleFillColorTransparentBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
  </Style>

    <!-- Accent Button Style (Windows 11 Fluent) -->
    <Style x:Key="AppAccentButtonStyle" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
        <Setter Property="CornerRadius" Value="4"/>
     <Setter Property="Padding" Value="16,8"/>
    </Style>

    <!-- Color Picker Item Style -->
    <Style x:Key="ColorPickerItemStyle" TargetType="Border">
        <Setter Property="Width" Value="32"/>
      <Setter Property="Height" Value="32"/>
    <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="BorderThickness" Value="2"/>
     <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <!-- Empty State Style -->
    <Style x:Key="EmptyStateStyle" TargetType="StackPanel">
    <Setter Property="HorizontalAlignment" Value="Center"/>
 <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Spacing" Value="16"/>
     <Setter Property="Padding" Value="24"/>
    </Style>

    <!-- Page Container Style -->
  <Style x:Key="PageContainerStyle" TargetType="Grid">
      <Setter Property="Padding" Value="24"/>
        <Setter Property="MaxWidth" Value="1400"/>
   <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Entrance Animation (Windows 11 Fluent Motion) -->
    <Storyboard x:Key="EntranceStoryboard">
   <DoubleAnimation From="0" To="1" Duration="0:0:0.3">
       <DoubleAnimation.EasingFunction>
       <CubicEase EasingMode="EaseOut"/>
   </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
  </Storyboard>
</ResourceDictionary>
